# Configuración del API Gateway
PORT=5000
DEBUG=True
HOST=0.0.0.0

# URLs de los servicios
AUTENTICADOR_URL=http://localhost:5001
AUTORIZADOR_URL=http://localhost:5002
PRODUCTOS_URL=http://localhost:5003
PROVEDORES_URL=http://localhost:5004

# Timeouts de servicios (en segundos)
AUTENTICADOR_TIMEOUT=30
AUTORIZADOR_TIMEOUT=30
PRODUCTOS_TIMEOUT=30
PROVEDORES_TIMEOUT=30

# Configuración de logging
LOG_LEVEL=INFO

# Configuración de seguridad
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production

# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS
CORS_ORIGINS=*
